<%= form_for @user, :url => url do |f| %>

    <fieldset class="form-group">
        <label class="control-label" for = "user_name">Name</label>:
        <%= f.text_field :name, class: "form-control", placeholder:"User Name" %>
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label" for = "user_location">Location</label>:
        <%= f.text_field :location, class: "form-control", placeholder:"Location" %>
    </fieldset>

    <fieldset class="form-group">
        <label class="control-label" for = "user_role">Role</label>:
        <%= f.select :role, User::Roles, {prompt: true}, {class: "form-control"} %>
    </fieldset>

    <%= f.submit button_text, class: "btn btn-primary btn-block"%>
    
<% end -%>